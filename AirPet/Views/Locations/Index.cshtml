@{
  Layout = "_Layout";
}

@using AirPet.Models;
@model List<AirPet.Models.Location>;
<div class="container-fluid bg-3 text-center">    
  <h1>Destinations</h1>
  <div class="row">
    @if (@Model.Count == 0)
    {
      <h3>No destinations have been added yet!</h3>
    } 

    @foreach (Location location in Model)
    {
      string imgUrl = $"../img/{location.LocationId}.jpg"; 
      <div class="col-sm-3">
        <li>@Html.ActionLink($"{location.Name}", "Details", new { id = location.LocationId })</li>
        
        <img src= @imgUrl  class="img-responsive" style="width:100%" alt="Image">
      </div>
    }

    <p>@Html.ActionLink("Add new location", "Create")</p>

    <p>@Html.ActionLink("Home", "Index", "Home")</p>
  </div>
</div>