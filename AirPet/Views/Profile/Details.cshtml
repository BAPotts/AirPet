@{
  Layout = "_Layout";
}

@using AirPet.Models
@model AirPet.Models.Profile

<div class="container-fluid">
  <h1>My Profile</h1>
  <div class="row">
  <div class="col-sm-3">
    <img style="border-radius: 100%" src="~/img/me.jpeg">
    <br><br>
    <ul class="list-group">
      <li class="list-group-item"><strong>Name: </strong>@Html.DisplayFor(model => model.FirstName)</li>
      <li class="list-group-item">@Html.DisplayFor(model => model.Location)</li>
      <li class="list-group-item">@Html.DisplayFor(model => model.Pets)</li>
    </ul>
  </div>
  <div style="justify-content: center" class="col-sm-9">
    <div style="width: 80%" class="panel panel-default">
      <div class="panel-heading">About Me</div>
      <div class="panel-body">@Html.DisplayFor(model => model.Bio)</div>
      </div>
    </div>
  </div>
</div>
